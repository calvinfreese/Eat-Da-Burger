<h1>Burgers!</h1>


<div class="d-flex justify-content-center">
    
    <ul>
        <h2>Burgers To Eat</h2>
        {{#each burgers}}
            {{#unless devoured}}
                {{> burgers/burger-block devour=true}}
            {{/unless}}
        {{/each}}
    </ul>




    
    <ul>
        <h2>Burgers You've Devoured</h2>
        {{#each burgers}}
            {{#if devoured}}
                <li class="eaten">{{burger_name}}</li>
            {{/if}}
        {{/each}}
    </ul>
</div>



<div class="d-flex justify-content-center">
    <form  class="add-burger">
        <div>
            <input id="burger-text" name="burger_name" placeholder="What kind of burger would you like to see on the menu?">

            </input>
        <button type="submit">Submit</button>
    </form>
</div>
