



<div class="container burgers">
    <div class="row">
        <div class="col">
            <form  class="add-burger">
                <label>Add your favorite burger to the menu! </label>
                <input id="burger-text" type="text" name="burger_name" placeholder="Burger Name Here">
                </input>
                <button class="submit" type="submit">Submit</button>
            </form>
        </div>
    </div>
    
    <div class="row">
        <div class="col-lg">
            <ul class="burger-ul">
                <h2>Burgers To Eat</h2>
                {{#each burgers}}
                    {{#unless devoured}}
                        {{> burgers/burger-block devour=true}}
                    {{/unless}}
                {{/each}}
            </ul>
        </div>

    

        <div class="col-lg">
            <ul class="burger-ul">
                <h2>Burgers Eaten</h2>
                {{#each burgers}}
                    {{#if devoured}}
                        <li class="burger-li">{{id}}. {{burger_name}}</li>
                    {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>





